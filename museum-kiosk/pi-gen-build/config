#!/bin/bash
# Pi-Gen Configuration for Museum Kiosk

# Image name
IMG_NAME="MuseumKiosk"

# Release (bookworm = latest stable)
RELEASE="bookworm"

# Architecture
ARCH="arm64"

# Target hostname
TARGET_HOSTNAME="museum-kiosk"

# Enable SSH for maintenance
ENABLE_SSH=1

# Locale settings
LOCALE_DEFAULT="de_DE.UTF-8"
KEYBOARD_LAYOUT="de"
TIMEZONE_DEFAULT="Europe/Berlin"

# First user (for maintenance)
FIRST_USER_NAME="museum"
FIRST_USER_PASS="museum2024"

# Stage list - include our custom museum stage
STAGE_LIST="stage0 stage1 stage2 stage-museum"

# Skip stages after museum (no desktop environment needed)
SKIP_STAGE3=1
SKIP_STAGE4=1
SKIP_STAGE5=1

# Compression
DEPLOY_COMPRESSION="xz"

# Work directory (optional, uses default if not set)
# WORK_DIR="${BASE_DIR}/work"

# Export directory for final image
# EXPORT_DIR="${BASE_DIR}/export"
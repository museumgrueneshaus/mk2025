---
import '../../styles/kiosk-clean.css';

const { config } = Astro.props;
---

<div class="kiosk-page">
  <div class="container">
    <div class="kiosk-header">
      <h1 class="clean-section-title">Welcome to the Museum</h1>
    </div>
    <div class="kiosk-content">
      <div class="clean-grid clean-grid-2">
        <div class="clean-card">
          <h2>Explore Collections</h2>
          <p>Discover our extensive collection of artifacts, artworks, and historical treasures.</p>
          <button class="clean-btn clean-btn-primary">View Collections</button>
        </div>
        <div class="clean-card">
          <h2>Today's Events</h2>
          <p>Check out special exhibitions, guided tours, and educational programs happening today.</p>
          <button class="clean-btn">See Events</button>
        </div>
        <div class="clean-card">
          <h2>Interactive Tours</h2>
          <p>Take a self-guided multimedia tour through our galleries with rich audio and video content.</p>
          <button class="clean-btn">Start Tour</button>
        </div>
        <div class="clean-card">
          <h2>Museum Information</h2>
          <p>Learn about visiting hours, facilities, accessibility options, and museum policies.</p>
          <button class="clean-btn">Get Info</button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .kiosk-page {
    width: 100vw;
    height: 100vh;
    background: var(--color-bg);
    overflow-y: auto;
  }
  
  .clean-card h2 {
    color: var(--color-primary);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-2xl);
  }
  
  .clean-card p {
    color: var(--color-secondary);
    margin-bottom: var(--space-6);
    line-height: 1.6;
  }
  
  .clean-card button {
    margin-top: auto;
  }
  
  /* Ensure cards are equal height */
  .clean-grid .clean-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
</style>
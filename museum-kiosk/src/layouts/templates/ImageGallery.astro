---
import '../../styles/kiosk-clean.css';

const { config } = Astro.props;
const images = config.content?.images || [];
---

<div class="kiosk-page">
  <div class="kiosk-content">
    <div class="container">
      <div class="clean-section">
        <h1 class="clean-section-title">üì∏ Bildergalerie</h1>
        
        {images.length > 0 ? (
          <div class="clean-grid clean-grid-3">
            {images.map((image: string, index: number) => (
              <div class="clean-card image-card">
                <img src={image} alt={`Bild ${index + 1}`} class="gallery-image" />
              </div>
            ))}
          </div>
        ) : (
          <div class="clean-empty">
            <div class="clean-empty-icon">üñºÔ∏è</div>
            <p class="clean-empty-text">Keine Bilder verf√ºgbar</p>
          </div>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .kiosk-page {
    width: 100vw;
    height: 100vh;
    background: var(--color-bg);
    color: var(--color-primary);
    overflow: auto;
  }
  
  .image-card {
    padding: 0;
    overflow: hidden;
  }
  
  .gallery-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }
  
  @media (pointer: coarse) {
    .gallery-image {
      height: 300px;
    }
  }
</style>
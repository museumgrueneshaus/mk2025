    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 30px;
    -webkit-overflow-scrolling: touch;
  }

  /* Hide Scrollbars */
  .calendar-main::-webkit-scrollbar {
    display: none;
  }
  

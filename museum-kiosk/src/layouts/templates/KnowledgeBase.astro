---
import '../../styles/kiosk-clean.css';

const { config } = Astro.props;
---

<div class="kiosk-page">
  <div class="kiosk-content">
    <div class="container">
      <div class="clean-empty">
        <div class="clean-empty-icon">🏛️</div>
        <h1 class="clean-section-title">Wissensdatenbank</h1>
        <p class="clean-empty-text">Clean Museum Template</p>
        
        <div class="clean-btn-group">
          <button class="clean-btn clean-btn-primary">Entdecken</button>
          <button class="clean-btn">Mehr erfahren</button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .kiosk-page {
    width: 100vw;
    height: 100vh;
    background: var(--color-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
  }
</style>
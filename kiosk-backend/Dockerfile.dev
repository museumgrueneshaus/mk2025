FROM node:18-alpine

# Install build dependencies
RUN apk update && apk add --no-cache \
    build-base \
    gcc \
    autoconf \
    automake \
    zlib-dev \
    libpng-dev \
    vips-dev \
    git \
    python3

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY . .

# Build admin panel
RUN npm run build

# Create uploads directory
RUN mkdir -p public/uploads

EXPOSE 1337

# Development mode with hot reload
CMD ["npm", "run", "develop"]